<body>
    <div class="container">
        <h1>Resource Optimization Engine</h1>
        <div class="stats">
            <div class="card"><h3>System State</h3><p id="status" style="color:#60a5fa;">-</p></div>
            <div class="card"><h3>Agent Action</h3><p id="action" style="color:#4ade80;">-</p></div>
            <div class="card"><h3>Efficiency</h3><p id="efficiency" style="color:#fbbf24;">-</p></div>
        </div>
        <button onclick="updateDashboard()">âš¡ Run Optimization</button>
        <canvas id="efficiencyChart"></canvas>
    </div>

    <script>
        let efficiencyData = [];
        let labels = [];
        let step = 0;

        const ctx = document.getElementById('efficiencyChart').getContext('2d');
        const chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'System Efficiency (%)',
                    data: efficiencyData,
                    borderColor: '#3b82f6',
                    backgroundColor: 'rgba(59, 130, 246, 0.2)',
                    fill: true,
                    tension: 0.4,
                    borderWidth: 3,
                    pointRadius: 4,
                    pointBackgroundColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { grid: { color: 'rgba(255,255,255,0.1)' }, ticks: { color: '#94a3b8' } },
                    x: { grid: { display: false }, ticks: { color: '#94a3b8' } }
                },
                plugins: { legend: { labels: { color: '#fff' } } }
            }
        });

        async function updateDashboard() {
            try {
                const res = await fetch('http://127.0.0.1:5000/optimize');
                const data = await res.json();
                document.getElementById('status').innerText = data.status;
                document.getElementById('action').innerText = data.action;
                document.getElementById('efficiency').innerText = data.efficiency;
                step++;
                labels.push(step);
                efficiencyData.push(parseInt(data.efficiency));
                if(labels.length > 10) { labels.shift(); efficiencyData.shift(); }
                chart.update();
            } catch (e) { alert("Backend server not running!"); }
        }
    </script>
</body>
